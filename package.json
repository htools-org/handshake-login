{
  "name": "handshake-login",
  "version": "0.1.0",
  "description": "A library for authentication with Handshake names, used by validating servers and identity managers.",
  "license": "MIT",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "git://github.com/rithvikvibhu/handshake-login.git",
  "homepage": "https://github.com/rithvikvibhu/handshake-login",
  "bugs": {
    "url": "https://github.com/rithvikvibhu/handshake-login/issues"
  },
  "keywords": [
    "hns",
    "handshake",
    "authentication",
    "library"
  ],
  "author": "Rithvik Vibhu <rithvikvibhu@gmail.com>",
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc --silent bmocha build/main/lib/**/*.spec.js",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent bmocha build/main/lib/**/*.spec.js --watch",
    "cov": "run-s build test:unit cov:html cov:lcov",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:send": "run-s cov:lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "dohjs": "^0.3.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "bmocha": "^2.1.5",
    "browser-env": "^3.3.0",
    "chai": "^4.3.4",
    "codecov": "^3.8.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.6.0",
    "eslint-plugin-import": "^2.24.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "typedoc": "^0.21.6",
    "typescript": "^4.3.5"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
